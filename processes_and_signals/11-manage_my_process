#!/usr/bin/env bash
# This script manages the process of manage_my_process.sh (start, stop, restart)

PROCESS_NAME="manage_my_process.sh"
PID_FILE="/var/run/my_process.pid"

start_process() {
    if [ -f "$PID_FILE" ]; then
        echo "Process already running."
        exit 1
    fi
    nohup ./manage_my_process.sh &> /dev/null &
    echo $! > "$PID_FILE"
    echo "manage_my_process started"
}

stop_process() {
    if [ ! -f "$PID_FILE" ]; then
        echo "Process not running."
        exit 1
    fi
    kill "$(cat "$PID_FILE")" && rm -f "$PID_FILE"
    echo "manage_my_process stopped"
}

restart_process() {
    stop_process
    start_process
    echo "manage_my_process restarted"
}

case "$1" in
    start) start_process ;;
    stop) stop_process ;;
    restart) restart_process ;;
    *) echo "Usage: manage_my_process {start|stop|restart}"; exit 1 ;;
esac

