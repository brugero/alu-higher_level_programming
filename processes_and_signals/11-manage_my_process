#!/usr/bin/env bash
# This script manages manage_my_process, starting, stopping, or restarting it.

PID_FILE="/var/run/my_process.pid"

start() {
  if [ -f "$PID_FILE" ]; then
    echo "manage_my_process already started"
    exit 1
  fi
  ./manage_my_process.sh &
  echo $! > "$PID_FILE"
  echo "manage_my_process started"
}

stop() {
  if [ -f "$PID_FILE" ]; then
    kill $(cat "$PID_FILE")
    rm -f "$PID_FILE"
    echo "manage_my_process stopped"
  else
    echo "manage_my_process not running"
  fi
}

restart() {
  stop
  start
  echo "manage_my_process restarted"
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    restart
    ;;
  *)
    echo "Usage: manage_my_process {start|stop|restart}"
    ;;
esac

